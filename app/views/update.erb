<form action="/tasks/<%= @task.id %>/update" method="post">
  <h3>Update task:</h3>
  <h4>Title</h4>
  <input type='text' name='task[title]' value="<%= @task.title %>"/><br/>
  <h4>Description</h4>
  <textarea name='task[description]'><%= @task.description %></textarea><br/>
  <input type='submit' class="btn btn-success"/>
</form>
